{
   "version": "0.2.0",
   "configurations": [
        {
            "name": "run console_demo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build console_demo",
            "program": "${workspaceFolder}/demos/console_demo/bin/Debug/netcoreapp2.0/console_demo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/demos/console_demo",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ,]
}